<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                      android:angle="270"
                      android:startColor="#20A2A2A2"
                      android:centerColor="#41A2A2A2"
                      android:endColor="#20A2A2A2"/>
            <corners android:topRightRadius="@dimen/default_corner_radius" android:topLeftRadius="@dimen/default_corner_radius"/>
        </shape>
    </item>

    <!-- background -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:topRightRadius="@dimen/default_corner_radius" android:topLeftRadius="@dimen/default_corner_radius"/>
        </shape>
    </item>
</layer-list>